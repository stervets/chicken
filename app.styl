gradient()
  background: #f1e767;
  background: -moz-linear-gradient(top, #f1e767 0%, #feb645 100%);
  background: -webkit-gradient(linear, left top, left bottom, color-stop(0%, #f1e767), color-stop(100%, #feb645));
  background: -webkit-linear-gradient(top, #f1e767 0%, #feb645 100%);
  background: -o-linear-gradient(top, #f1e767 0%, #feb645 100%);
  background: -ms-linear-gradient(top, #f1e767 0%, #feb645 100%);
  background: linear-gradient(to bottom, #f1e767 0%, #feb645 100%);

fatBorder()
  border 15px solid #f1e767
  border-radius 5px

WIDTH = 950px
HEIGHT = 640px

messageWidth = WIDTH - 400px
messageHeight = HEIGHT - 250px

html
  min-height 100%

body
  min-height 100%
  gradient()

#content
  margin-left auto
  margin-right auto
  #view
    background-image url("/img/bg.png")
    width WIDTH
    height HEIGHT
    background-color grey
    position relative
    overflow hidden
    display inline-table

    fatBorder()

    .login
      font-family verdana, sans-serif
      font-size 30px
      width messageWidth
      height messageHeight
      left ((WIDTH - messageWidth) / 2) px
      top ((HEIGHT - messageHeight) / 2 - 40) px
      position absolute
      gradient()
      fatBorder()

      .message
        text-align center
        position absolute
        top 0px
        left 0px
        width 100%
        height 100%
        padding-top 100px

  #score
    display inline-table
    width 200px

/*
  Chicken
*/
.chicken
  position absolute
  overflow visible
  margin-top -55px
  margin-left -90px
  transition: top 1000ms ease-out, left 1000ms ease-out

  .sprite
    width 88px
    height 110px
    cursor pointer

    &.idle
      background-image url("/img/idle.png")

    &.cluck
      background-image url("/img/cluck.png")

    &.move
      background-image url("/img/move.png")

    &.poop
      background-image url("/img/poop.png")

  .nickname
    white-space nowrap
    text-align center
    color yellowgreen
    text-shadow 1px 1px 1px black
    position relative
    top 35px
    &.user
      color yellow

  .msg
    position absolute
    top 0px
    left 0px
    background-color white
    border 1px solid #ddd
    border-radius 4px
    padding 4px
    white-space nowrap

.reversed
  -webkit-transform: scaleX(-1)
  -moz-transform: scaleX(-1)
  transform: scaleX(-1)

.poop
  position absolute
  cursor pointer
  width 20px
  height 20px
  background-image url("../img/kaka.png")

/*
  Controls
*/
.controls
  width 100%
  position absolute
  top 230px
  left 0px

  .movable
    cursor crosshair
    position relative
    height 360px

  .form
    height 50px
    width 100%
    position relative

    .background
      background-color white
      opacity .5
      position absolute
      top 0px
      left 0px
      width 100%
      height 100%

    .inputs
      position absolute
      top 0px
      left 0px
      padding 20px

      .text
        width: 500px
        margin-left 180px
